<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1.7"
            android:padding="10dp"
            android:layout_gravity="center"
            android:id="@+id/Dontation_item_image"
            android:src="@drawable/food"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e1e1e1"
            android:layout_margin="10dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/Food"
                android:singleLine="true"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:id="@+id/Dontation_item_Title"
                android:textColor="#454545"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="dvsjbhsdbvfjsn dkv"
                android:id="@+id/Dontation_item_Description"
                android:textColor="#909090"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/Adress_item_image"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_right_arrow"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>