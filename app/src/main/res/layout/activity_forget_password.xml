<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".ForgetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/bg_edited"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/scrolbarbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/scrollbarbg"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/scrollingtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scrollabletextviewbg"
                    android:ellipsize="marquee"

                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/Quran"
                    android:textColor="@color/white"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />
                />
            </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-20dp"
            android:background="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="7dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/bottom_shadow"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/email" />

                <EditText
                    android:id="@+id/ForgetPass_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/EmailHint"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textDirection="ltr"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/haveCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="100dp"
                android:padding="10dp"
                android:text="@string/Ihaveone" />

            <Button
                android:id="@+id/SendVerifiactionButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/button1"
                android:elevation="30dp"
                android:text="@string/SendEmail"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>